{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.openarcloud.org/scr.schema.json",
  "title": "SCR",
  "description": "Spatial Service Record (SCR)",

  "type": "object",
  "properties": {
    "type": {
      "const": "scr",
      "default": "scr"
    },
    "content": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": ""
        },
        "title": {
          "type": "string",
          "default": ""
        },
        "description": {
          "type": "string",
          "default": ""
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "placekey": {
          "type": "string",
          "default": ""
        },
        "refs": {
          "type": "array",
          "items": [{
            "type": "object",
            "properties": {
              "contentType": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": ["contentType", "url"]
          }]
        },
        "geopose": {
          "type": "object",
          "properties": {
            "longitude": {
              "type": "number",
              "default": 0
            },
            "latitude": {
              "type": "number",
              "default": 0
            },
            "ellipsoidHeight": {
              "type": "number",
              "default": 0
            },
            "quaternion": {
              "type": "object",
              "properties": {
                "x": {
                  "type": "number",
                  "default": 0
                },
                "y": {
                  "type": "number",
                  "default": 0
                },
                "z": {
                  "type": "number",
                  "default": 0
                },
                "w": {
                  "type": "number",
                  "default": 1
                }
              },
              "required": ["x", "y", "z", "w"]
            }
          },
          "required": ["longitude", "latitude", "ellipsoidHeight", "quaternion"]
        },
        "size": {
          "type": "number",
          "default": 0
        },
        "bbox": {
          "type": "string",
          "default": ""
        },
        "definitions": {
          "type": "array",
          "items": [{
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": ["type", "value"]
          }]
        }
      },
      "required": ["id", "type", "title", "refs", "geopose"]
    }
  },
  "required": [ "type", "content" ]
}
